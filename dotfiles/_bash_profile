# Alias Setting
alias ctags='`brew --prefix`/bin/ctags'
alias vim='`brew --prefix`/bin/vim'
alias ls='ls -CFG'
alias diff='colordiff'
alias ctags="`brew --prefix`/bin/ctags"

# Smile PROMPT :)
export PS1="\`if [ \$? = 0 ]; then echo -_-; else echo O_O; fi\`[\u@\h:\w]$ "

# Language Setting
export LANG="ja_JP.UTF-8"
export LC_ALL="ja_JP.UTF-8"

# lessカラー表示
export LESS="-R"

#パスの設定
export PATH=/sbin:/usr/sbin:/bin:/usr/local/bin:/usr/bin:/usr/X11/bin:$HOME/local/bin

# tmux Setting
# 端末起動時にtmuxを起動、すでに起動しているならアタッチする。
# $SHLVL環境変数でシェルのネストレベルを調べる。
# tmuxのアタッチが失敗するなら、tmuxを起動する。
# 参考 : http://filmlang.org/computer/tmux
if [ $SHLVL = 1 ];then
	tmux attach || tmux
fi

